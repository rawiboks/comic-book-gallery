
@model ComicBookGallery.Models.Series[]

@{
    ViewBag.Title = "Series";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-12">
        <ul class="series-list">

            @foreach (var serie in Model)
            {
                <li>
                    <h4>@Html.ActionLink(serie.Title,"Detail",new { id = serie.Id })</h4>
                </li>
            }

            <li>
                <h4><a href="/Series/Detail/1">"Spiderman"</a></h4>
            </li>

        </ul>
    </div>
</div>
